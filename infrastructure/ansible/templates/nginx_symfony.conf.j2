server {
    listen 8080;
    server_name shape-of-you.local;
    root /Users/antony/Documents/shape-of-you/public;

    # Ajout des logs d'erreur détaillés
    error_log /opt/homebrew/var/log/nginx/shape-of-you.local_error.log debug;
    access_log /opt/homebrew/var/log/nginx/shape-of-you.local_access.log combined;

    location / {
        try_files $uri /index.php$is_args$args;
    }

    location ~ ^/index\.php(/|$) {
        fastcgi_pass 127.0.0.1:9000;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param DOCUMENT_ROOT $document_root;
        fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_busy_buffers_size 256k;
        internal;
    }


    # Exception pour le fichier test.php avec définition de DOCUMENT_ROOT
    location = /test.php {
        fastcgi_pass 127.0.0.1:9000;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root/test.php;
        fastcgi_param DOCUMENT_ROOT $document_root;
    }

    location ~ \.php$ {
        return 404;
    }

    # Augmentation de la taille du buffer
    client_max_body_size 20M;
    client_body_buffer_size 128k;
}
