{% extends 'base.html.twig' %}

{% block title %}Analyse d'image{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-4">

        <div class="max-w-4xl mx-auto">
            {% include 'components/breadcrumb.html.twig' %}

        <h1 class="text-3xl font-bold mb-6 dark:text-white">Analyse de l'image pour l'outfit : {{ outfit.name }}</h1>

        <div class="bg-white dark:bg-gray-800 shadow rounded-lg mb-8 flex flex-col">
            <div class="border-b border-gray-200 dark:border-gray-700 px-6 py-4">
                <h2 class="text-2xl font-semibold dark:text-white">Télécharger une image</h2>
            </div>
            <div class="px-6 py-4">
                {{ form_start(imageForm, {'attr': {'enctype': 'multipart/form-data', 'class': 'space-y-4'}}) }}
                {{ form_widget(imageForm) }}
                <button type="submit" class="w-full md:w-auto bg-tertiary-600 hover:bg-tertiary-700 text-white font-semibold py-2 px-4 rounded mt-4">
                    Analyser
                </button>
                {{ form_end(imageForm) }}
            </div>
        </div>

        {% if error %}
            <div class="bg-red-100 dark:bg-red-900 border border-red-400 dark:border-red-700 text-red-700 dark:text-red-200 px-4 py-3 rounded mb-6">
                {{ error }}
            </div>
        {% endif %}

        {% if globalForm is not null %}
            <hr class="my-8 dark:border-gray-700">
            <h2 class="text-2xl font-semibold mb-4 dark:text-white">Modifier et ajouter les vêtements détectés</h2>
            <div class="">
                {{ form_start(globalForm, {'attr': {'class': 'space-y-4'}}) }}
                <div class="flex flex-wrap -mx-2">
                    {% for child in globalForm.items %}

                        <div class="w-full md:w-1/2 px-2 mb-4">
                            <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
                                {{ form_row(child, {'label': false}) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <button type="submit" class="w-full md:w-auto bg-tertiary-600 hover:bg-tertiary-700 text-white font-semibold py-2 px-4 rounded mt-4 mb-5">
                    Ajouter tous les vêtements
                </button>
                {{ form_end(globalForm) }}


            </div>
        </div>

        {% endif %}
    </div>
{% endblock %}
