{% extends 'base.html.twig' %}

{% block title %}Outfit{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-2xl font-bold mb-6">Outfit</h1>

        <!-- Responsive table container -->
        <div class="overflow-x-auto rounded-lg shadow-md">
            <table class="min-w-full divide-y divide-gray-200 bg-white">
                <tbody class="divide-y divide-gray-200">
                <tr>
                    <th class="px-6 py-3 text-left font-semibold text-gray-700 bg-gray-50">
                        Id
                    </th>
                    <td class="px-6 py-3">
                        {{ outfit.id }}
                    </td>
                </tr>
                <tr>
                    <th class="px-6 py-3 text-left font-semibold text-gray-700 bg-gray-50">
                        Name
                    </th>
                    <td class="px-6 py-3">
                        {{ outfit.name }}
                    </td>
                </tr>
                <tr>
                    <th class="px-6 py-3 text-left font-semibold text-gray-700 bg-gray-50">
                        Description
                    </th>
                    <td class="px-6 py-3">
                        {{ outfit.description }}
                    </td>
                </tr>
                <tr>
                    <th class="px-6 py-3 text-left font-semibold text-gray-700 bg-gray-50">
                        Created At
                    </th>
                    <td class="px-6 py-3">
                        {{ outfit.CreatedAt ? outfit.CreatedAt|date('Y-m-d H:i:s') : '' }}
                    </td>
                </tr>
                <tr>
                    <th class="px-6 py-3 text-left font-semibold text-gray-700 bg-gray-50">
                        Updated At
                    </th>
                    <td class="px-6 py-3">
                        {{ outfit.UpdateDateAt ? outfit.UpdateDateAt|date('Y-m-d') : '' }}
                    </td>
                </tr>
                <tr>
                    <th class="px-6 py-3 text-left font-semibold text-gray-700 bg-gray-50">
                        Is Published
                    </th>
                    <td class="px-6 py-3">
                        {{ outfit.isPublished ? 'Yes' : 'No' }}
                    </td>
                </tr>
                <tr>
                    <th class="px-6 py-3 text-left font-semibold text-gray-700 bg-gray-50">
                        Likes Count
                    </th>
                    <td class="px-6 py-3">
                        {{ outfit.likesCount }}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>

        <!-- Action buttons -->
        <div class="mt-6 space-x-2">
            <a
                    href="{{ path('app_outfit_index') }}"
                    class="inline-block px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition-colors"
            >
                Back to list
            </a>

            <a
                    href="{{ path('app_outfit_edit', {'id': outfit.id}) }}"
                    class="inline-block px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors"
            >
                Edit
            </a>

            {{ include('admin/outfit/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
