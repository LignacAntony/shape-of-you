{% extends 'base.html.twig' %}

{% block title %}Outfit index{% endblock %}

{% block body %}
    <h1>Outfit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdateDateAt</th>
                <th>IsPublished</th>
                <th>LikesCount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for outfit in outfits %}
            <tr>
                <td>{{ outfit.id }}</td>
                <td>{{ outfit.name }}</td>
                <td>{{ outfit.description }}</td>
                <td>{{ outfit.CreatedAt ? outfit.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ outfit.UpdateDateAt ? outfit.UpdateDateAt|date('Y-m-d') : '' }}</td>
                <td>{{ outfit.isPublished ? 'Yes' : 'No' }}</td>
                <td>{{ outfit.likesCount }}</td>
                <td>
                    <a href="{{ path('app_outfit_show', {'id': outfit.id}) }}">show</a>
                    <a href="{{ path('app_outfit_edit', {'id': outfit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_outfit_new') }}">Create new</a>
{% endblock %}
