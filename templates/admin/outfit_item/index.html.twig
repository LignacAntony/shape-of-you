{% extends 'base.html.twig' %}

{% block title %}Liste des éléments de tenue{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-2xl font-bold mb-4">Liste des éléments de tenue</h1>

        <div class="bg-white shadow-sm rounded-lg overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Taille</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date d'achat</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                {% for outfit_item in outfit_items %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ outfit_item.id }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ outfit_item.size }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {{ outfit_item.purchaseAt ? outfit_item.purchaseAt|date('Y-m-d H:i:s') : '' }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                            <a href="{{ path('app_outfit_item_show', {'id': outfit_item.id}) }}" 
                               class="text-indigo-600 hover:text-indigo-900">Voir</a>
                            <a href="{{ path('app_outfit_item_edit', {'id': outfit_item.id}) }}" 
                               class="text-blue-600 hover:text-blue-900">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-sm text-gray-500">Aucun élément trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_outfit_item_new') }}" 
               class="inline-block px-4 py-2 bg-green-600 text-white font-semibold rounded-md hover:bg-green-700 transition-colors">
                Créer un nouvel élément
            </a>
        </div>
    </div>
{% endblock %}
