{% extends 'base.html.twig' %}

{% block title %}Détails de l'élément de tenue{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-4">
        {% include 'components/back_button.html.twig' %}

        <div class="max-w-2xl mx-auto">
            <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
                    <h1 class="text-lg font-medium text-gray-900">
                        Détails de l'élément de tenue
                    </h1>
                </div>

                <div class="px-4 py-5 sm:p-6">
                    <dl class="grid grid-cols-1 gap-4">
                        <div class="sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500">ID</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ outfit_item.id }}</dd>
                        </div>
                        <div class="sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500">Taille</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ outfit_item.size }}</dd>
                        </div>
                        <div class="sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500">Date d'achat</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                {{ outfit_item.purchaseAt ? outfit_item.purchaseAt|date('Y-m-d H:i:s') : 'Non spécifiée' }}
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>

            <div class="mt-4 flex justify-between">
                <div class="space-x-2">
                    <a href="{{ path('app_outfit_item_index') }}"
                       class="inline-block px-4 py-2 bg-gray-200 text-gray-700 font-semibold rounded-md hover:bg-gray-300 transition-colors">
                        Retour à la liste
                    </a>
                    <a href="{{ path('app_outfit_item_edit', {'id': outfit_item.id}) }}"
                       class="inline-block px-4 py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition-colors">
                        Modifier
                    </a>
                </div>

                {{ include('admin/outfit_item/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
