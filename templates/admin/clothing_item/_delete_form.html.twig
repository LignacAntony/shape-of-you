<form
        method="post"
        action="{{ path('app_clothing_item_delete', {'id': clothing_item.id}) }}"
        onsubmit="return confirm('Are you sure you want to delete this item?');"
        class="inline-block"
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ clothing_item.id) }}">
    <button
            type="submit"
            class="px-4 py-2 bg-red-500 text-white font-semibold rounded-md hover:bg-red-600 transition-colors"
    >
        Delete
    </button>
</form>
