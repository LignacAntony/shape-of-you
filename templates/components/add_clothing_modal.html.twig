{% set modal_id = modal_id|default('addClothingModal') %}

<div x-data="{ 
    open: false,
    formData: new FormData(),
    isSubmitting: false,
    errorMessage: null,
    fieldErrors: {},

    submitForm(event) {
        event.preventDefault();
        this.isSubmitting = true;
        this.errorMessage = null;
        this.fieldErrors = {};

        // Récupérer les données du formulaire
        this.formData = new FormData(event.target);

        // Envoyer la requête AJAX
        fetch(event.target.action, {
            method: 'POST',
            body: this.formData
        })
        .then(response => response.json())
        .then(data => {
            this.isSubmitting = false;
            if (data.status === 'success') {
                // Fermer la modale et rediriger
                this.open = false;
                window.location.href = data.redirect;
            } else {
                this.errorMessage = data.message;
                this.fieldErrors = data.field_errors || {};
            }
        })
        .catch(error => {
            this.isSubmitting = false;
            this.errorMessage = 'Une erreur est survenue lors de l\'ajout du vêtement.';
        });
    }
}" 
@keydown.escape.window="open = false">
    {# Bouton pour ouvrir la modale #}
    <button @click="open = true" class="px-4 py-2 text-xs md:text-sm font-medium rounded-lg bg-white text-tertiary-600 hover:bg-primary-100 transition duration-200">
        <i class="fas fa-plus mr-2"></i>Ajouter un vêtement
    </button>

    {# Fond de la modale #}
    <div x-show="open" 
        class="fixed inset-0 bg-black bg-opacity-50 z-40"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0">
    </div>

    {# Contenu de la modale #}
    <div x-show="open"
        class="fixed inset-0 z-50 overflow-y-auto"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 transform translate-y-4"
        x-transition:enter-end="opacity-100 transform translate-y-0"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100 transform translate-y-0"
        x-transition:leave-end="opacity-0 transform translate-y-4" @click.stop>

    <div class="flex items-center justify-center min-h-screen p-4">
            <div class="bg-white rounded-lg shadow-xl w-full max-w-md">
                {# En-tête de la modale #}
                <div class="flex items-center justify-between p-4 border-b">
                    <h3 class="text-xl font-semibold text-gray-900">Ajouter un vêtement</h3>
                    <button @click="open = false" class="text-gray-400 hover:text-gray-500">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                {# Message d'erreur global #}
                <div x-show="errorMessage" class="p-4 bg-red-50 text-red-700 border-b">
                    <p x-text="errorMessage"></p>
                </div>

                {# Corps de la modale #}
                <div class="p-4">
                    {{ form_start(form, {
                        'action': path('wardrobe_clothing_add'),
                        'method': 'POST',
                        'attr': {
                            'class': 'space-y-4',
                            'enctype': 'multipart/form-data',
                            '@submit': 'submitForm'
                        }
                    }) }}
                        <input type="hidden" name="wardrobe_id" value="{{ wardrobe_id }}">
                        {% if outfit_id is defined %}
                            <input type="hidden" name="outfit" value="{{ outfit_id }}">
                        {% endif %}

                        <div>
                            {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.category, {'attr': {'class': 'form-area w-full'}}) }}
                            <div x-show="fieldErrors.category" class="mt-1 text-sm text-red-600" x-text="fieldErrors.category"></div>
                            {{ form_errors(form.category) }}
                        </div>

                        <div>
                            {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-area w-full'}}) }}
                            <div x-show="fieldErrors.name" class="mt-1 text-sm text-red-600" x-text="fieldErrors.name"></div>
                            {{ form_errors(form.name) }}
                        </div>

                        <div>
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-area w-full', 'rows': '1'}}) }}
                            <div x-show="fieldErrors.description" class="mt-1 text-sm text-red-600" x-text="fieldErrors.description"></div>
                            {{ form_errors(form.description) }}
                        </div>

                        <div>
                            {{ form_label(form.brand, 'Marque', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.brand, {'attr': {'class': 'form-area w-full'}}) }}
                            <div x-show="fieldErrors.brand" class="mt-1 text-sm text-red-600" x-text="fieldErrors.brand"></div>
                            {{ form_errors(form.brand) }}
                        </div>

                        <div>
                            {{ form_label(form.color, 'Couleur', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.color, {'attr': {'class': 'form-area w-full'}}) }}
                            <div x-show="fieldErrors.color" class="mt-1 text-sm text-red-600" x-text="fieldErrors.color"></div>
                            {{ form_errors(form.color) }}
                        </div>

                        <div>
                            {{ form_label(form.size, 'Taille', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.size, {'attr': {'class': 'form-area w-full'}}) }}
                            <div x-show="fieldErrors.size" class="mt-1 text-sm text-red-600" x-text="fieldErrors.size"></div>
                            {{ form_errors(form.size) }}
                        </div>

                        {% if form.outfit is defined %}
                            <div>
                                {{ form_label(form.outfit, 'Ajouter à une tenue', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.outfit, {
                                    'attr': {
                                        'class': 'form-area w-full'
                                    },
                                    'value': outfit_id is defined ? outfit_id : null
                                }) }}
                                <div x-show="fieldErrors.outfit" class="mt-1 text-sm text-red-600" x-text="fieldErrors.outfit"></div>
                                {{ form_errors(form.outfit) }}
                            </div>
                        {% endif %}

                        <div>
                            {{ form_label(form.price, 'Prix (€)', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="w-full form-area flex flex-row-reverse relative">

                                {{ form_widget(form.price, {'attr': {'class': 'form-area w-full absolute top-0 left-0 m-0'}}) }}
                            </div>
                            <div x-show="fieldErrors.price" class="mt-1 text-sm text-red-600" x-text="fieldErrors.price"></div>
                            {{ form_errors(form.price) }}
                        </div>

                        <div>
                            {{ form_label(form.images, 'Images', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.images, {'attr': {'class': 'w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100'}}) }}
                            <div x-show="fieldErrors.images" class="mt-1 text-sm text-red-600" x-text="fieldErrors.images"></div>
                            {{ form_errors(form.images) }}
                        </div>

                        {# Boutons d'action #}
                        <div class="flex justify-end gap-3 mt-6">
                            <button type="button" @click="open = false"
                                    class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                                Annuler
                            </button>
                            <button type="submit"
                                    class="px-4 py-2 text-sm font-medium text-white bg-tertiary-500 rounded-md hover:bg-tertiary-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-tertiary-500"
                                    :disabled="isSubmitting">
                                <span x-show="!isSubmitting">Ajouter</span>
                                <span x-show="isSubmitting">
                                    <i class="fas fa-spinner fa-spin mr-2"></i>Ajout en cours...
                                </span>
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div> 