<div class="block bg-white dark:bg-gray-800 rounded-2xl shadow-md hover:shadow-lg transition duration-200">
    <div class="px-6 pt-6">

        <a href="{{ path('profile_show_user', {'id': outfit.author.id}) }}" class="flex items-center space-x-4 mb-4">
            <img src="{{ asset('/uploads/avatars/' ~ outfit.author.profile.avatar) }}" alt="Avatar"
                 class="w-12 h-12 rounded-full border-primary-600 border-4">
            <div>
                <p
                   class="font-bold text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors">{{ outfit.author.username }}</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">PostÃ© le {{ outfit.createdAt|date('d/m/Y') }}</p>
            </div>
        </a>
        <p class="mb-4 text-gray-900 dark:text-white">{{ outfit.name }}</p>
        <p class="mb-4 text-gray-700 dark:text-white">{{ outfit.description }}</p>
    </div>
    <a href="{{ path('outfit_details', {'id': outfit.id}) }}" class="block max-h-96">
        {% if outfit.images|length > 0 %}
            <img src="{{ asset(outfit.images[0]) }}" alt="Image Outfit" class="w-full h-96 object-cover">
        {% endif %}
    </a>

    <div class="px-6 pb-4 flex flex-wrap justify-between items-center text-gray-500 dark:text-white text-sm">
        {% include 'components/like_button.html.twig' with {
            'outfit': outfit,
            'likesCount': outfit.likesCount
        } %}

        <a href="{{ path('outfit_details', {'id': outfit.id}) }}" class="p-2 hover:text-gray-700 dark:hover:text-gray-300 transition-colors">
            ðŸ’¬ {{ outfit.reviews|length }} Commentaires
        </a>
    </div>
</div>
