{% set color = color|default('success') %}

<a href="{{ path('outfit_details', {'id': outfit.id}) }}" class="block transition-transform duration-300 hover:-translate-y-1">
    <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md">
        <div class="aspect-w-1 aspect-h-1 bg-gray-50 flex items-center justify-center">
            {% if outfit.images|length > 0 %}
                <img src="{{ asset(outfit.images|first) }}" 
                    alt="{{ outfit.name }}"
                    class="w-full h-full object-cover">
            {% else %}
                <i class="fas fa-tshirt text-2xl {% if color == 'success' %}text-green-500{% else %}text-gray-500{% endif %}"></i>
            {% endif %}
        </div>
        <div class="p-3">
            <h3 class="text-sm font-medium text-gray-900 truncate mb-2">{{ outfit.name }}</h3>
            <div class="flex gap-2 mb-2">
                <span class="px-2 py-1 text-xs rounded-full {% if color == 'success' %}bg-green-500{% else %}bg-gray-500{% endif %} text-white">
                    <i class="fas fa-heart mr-1"></i>{{ outfit.likesCount }}
                </span>
                {% if outfit.isPublished %}
                    <span class="px-2 py-1 text-xs rounded-full {% if color == 'success' %}bg-green-500{% else %}bg-gray-500{% endif %} text-white">
                        <i class="fas fa-check mr-1"></i>Publié
                    </span>
                {% else %}
                    <span class="px-2 py-1 text-xs rounded-full bg-gray-500 text-white">
                        <i class="fas fa-clock mr-1"></i>Non publié
                    </span>
                {% endif %}
            </div>
            <div class="text-xs text-gray-500">
                {{ outfit.outfitItems|length }} éléments
            </div>
        </div>
    </div>
</a> 