{% extends 'base.html.twig' %}

{% block title %}ClothingItem{% endblock %}

{% block body %}
    <h1>ClothingItem</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ clothing_item.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ clothing_item.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ clothing_item.description }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ clothing_item.brand }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ clothing_item.color }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ clothing_item.price }}</td>
            </tr>
            <tr>
                <th>AiTags</th>
                <td>{{ clothing_item.aiTags ? clothing_item.aiTags|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ clothing_item.createdAt ? clothing_item.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_clothing_item_index') }}">back to list</a>

    <a href="{{ path('app_clothing_item_edit', {'id': clothing_item.id}) }}">edit</a>

    {{ include('clothing_item/_delete_form.html.twig') }}
{% endblock %}
