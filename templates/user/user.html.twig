{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8 bg-white p-6 rounded shadow">

            <h2 class="text-center text-3xl font-extrabold text-gray-900">
                Modifier mon profil
            </h2>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="p-3 mb-2 rounded
                    {{ label == 'success' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form) }}
            <div class="space-y-4">
                {{ form_row(form.firstname, {
                    'label': 'Pr√©nom',
                    'attr': { 'class': 'appearance-none rounded block w-full px-3 py-2 border border-gray-300' }
                }) }}

                {{ form_row(form.lastname, {
                    'label': 'Nom',
                    'attr': { 'class': 'appearance-none rounded block w-full px-3 py-2 border border-gray-300' }
                }) }}

                {{ form_row(form.username, {
                    'label': 'Pseudo',
                    'attr': { 'class': 'appearance-none rounded block w-full px-3 py-2 border border-gray-300' }
                }) }}

                {{ form_row(form.plainPassword, {
                    'label': 'Nouveau mot de passe',
                    'attr': { 'class': 'appearance-none rounded block w-full px-3 py-2 border border-gray-300' },
                    'help': 'Laissez vide si vous ne souhaitez pas changer votre mot de passe.'
                }) }}
            </div>

            <button type="submit"
                    class="mt-6 w-full flex justify-center py-2 px-4 border border-transparent
                     text-sm font-medium rounded-md text-white bg-indigo-600
                     hover:bg-indigo-700 focus:outline-none focus:ring-2
                     focus:ring-offset-2 focus:ring-indigo-500">
                Enregistrer
            </button>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
