{% extends 'base.html.twig' %}

{% block title %}Wardrobe index{% endblock %}

{% block body %}
    <h1>Wardrobe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wardrobe in wardrobes %}
            <tr>
                <td>{{ wardrobe.id }}</td>
                <td>{{ wardrobe.name }}</td>
                <td>{{ wardrobe.description }}</td>
                <td>{{ wardrobe.createdAt ? wardrobe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_wardrobe_show', {'id': wardrobe.id}) }}">show</a>
                    <a href="{{ path('app_wardrobe_edit', {'id': wardrobe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_wardrobe_new') }}">Create new</a>
{% endblock %}
