{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex justify-center bg-gray-100 lg:py-10">
        <div class="w-full max-w-5xl flex gap-6 flex-col-reverse lg:flex-row">
            <div class="w-full lg:w-2/3">
                <div class="space-y-6">
                    {% for outfit in outfits %}
                        {% include 'components/home_outfit_card.html.twig' with { 'outfit': outfit } %}
                        {% include 'components/home_outfit_card.html.twig' with { 'outfit': outfit } %}
                        {% include 'components/home_outfit_card.html.twig' with { 'outfit': outfit } %}
                    {% else %}
                        <p class="text-gray-500">Aucune tenue publiée pour le moment.</p>
                    {% endfor %}
                </div>
            </div>

            <div class="w-full lg:w-1/3 h-fit p-6 sticky top-0">
                <h2 class="text-2xl font-bold mb-4 text-primary-600">Filtres</h2>
                <form method="GET" action="{{ path('app_home') }}" class="space-y-4">
                    <div>
                        <label for="searchbar" class="block font-semibold" >Rechercher</label>
                        <input id="searchbar" type="text" name="search" value="{{ search }}" placeholder="Rechercher un outfit..." class="w-full p-2 border rounded-lg">
                    </div>

                    <div>
                        <label for="search_filter" class="block font-semibold">Trier par</label>
                        <select id="search_filter" name="sort_by" class="w-full p-2 border rounded-lg">
                            <option value="recent" {% if sort_by == 'recent' %}selected{% endif %}>Plus récent</option>
                            <option value="oldest" {% if sort_by == 'oldest' %}selected{% endif %}>Moins récent</option>
                            <option value="most_likes" {% if sort_by == 'most_likes' %}selected{% endif %}>Plus de likes</option>
                            <option value="least_likes" {% if sort_by == 'least_likes' %}selected{% endif %}>Moins de likes</option>
                        </select>
                    </div>

                    <button type="submit" class="form-button__primary">
                        Appliquer les filtres
                    </button>
                </form>
            </div>

        </div>
    </div>
{% endblock %}
