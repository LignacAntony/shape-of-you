{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}
{% block body %}
    <h2 class="title-text">
        Mot de passe oublié ?
        <span class="title-underline"></span>
    </h2>


<div class="flex justify-center py-12 md:px-4 sm:px-6 lg:px-8">
    <div class="max-w-lg w-full px-4 lg:px-8 rounded-2xl bg-white shadow-lg p-8">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Réinitialiser votre mot de passe
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Veuillez entrer votre nouveau mot de passe
        </p>
        <div class="space-y-6 mt-8">
            <div class="flex flex-col items-center">
        {{ form_start(passForm, { 'attr': { 'class': 'mt-8 space-y-6  w-full' } }) }}
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    {{ form_label(passForm.password, null, { 'label_attr': { 'class': 'sr-only' } }) }}
                    {{ form_widget(passForm.password, {
                        'attr': {
                            'class': 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                            'placeholder': 'Nouveau mot de passe'
                        }
                    }) }}
                </div>
            </div>

            <div>
                <button type="submit"
                    class="group form-button__primary relative flex justify-center">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <i class="fa-solid fa-envelope"></i>

                    </span>
                    Réinitialiser le mot de passe
                </button>
            </div>
        {{ form_end(passForm) }}

        <div class="text-center text-sm mt-4">
            <a href="{{ path('app_login') }}" class="font-medium text-primary-600 hover:text-primary-500">
                Retour à la connexion
            </a>
        </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
