{% extends 'base.html.twig' %}

{% block title %}Proposition et création d'Outfit{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('proposal-form');
            const submitButton = form.querySelector('button[type="submit"]');
            const loadingSpinner = document.getElementById('loading-spinner');
            
            form.addEventListener('submit', function() {
                submitButton.disabled = true;
                submitButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Recherche en cours...';
                loadingSpinner.classList.remove('hidden');
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-4">
        <div class="max-w-4xl mx-auto">
            {% include 'components/breadcrumb.html.twig' %}

            <h1 class="text-3xl font-bold mb-6">Création d'un Outfit pour la wardrobe : {{ wardrobe.name }}</h1>

            <div class="bg-white shadow rounded-lg mb-8 flex flex-col">
                <div class="border-b border-gray-200 px-6 py-4">
                    <h2 class="text-2xl font-semibold">Proposer un Outfit avec l'IA</h2>
                </div>
                <div class="px-6 py-4">
                    {{ form_start(formProposal, {
                        'attr': {
                            'id': 'proposal-form',
                            'class': 'space-y-4'
                        }
                    }) }}
                    {{ form_row(formProposal.demande, {
                        'attr': {
                            'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'
                        }
                    }) }}
                    <button type="submit" name="action" value="propose" class="w-full md:w-auto bg-tertiary-600 hover:bg-tertiary-700 text-white font-semibold py-2 px-4 rounded">
                        Proposer l'Outfit
                    </button>
                    {{ form_end(formProposal) }}

                    <div id="loading-spinner" class="hidden mt-4">
                        <div class="flex items-center justify-center space-x-2 text-tertiary-600">
                            <div class="w-4 h-4 rounded-full animate-pulse bg-tertiary-600"></div>
                            <div class="w-4 h-4 rounded-full animate-pulse bg-tertiary-600"></div>
                            <div class="w-4 h-4 rounded-full animate-pulse bg-tertiary-600"></div>
                        </div>
                        <p class="text-center text-sm text-gray-500 mt-2">Recherche des vêtements en cours...</p>
                    </div>
                </div>
            </div>

            {% if error %}
                <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-lg">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-circle text-red-400 text-lg"></i>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">Une erreur est survenue</h3>
                            <div class="mt-2 text-sm text-red-700">
                                <p>{{ error }}</p>
                                
                                {% if "vide" in error %}
                                    <div class="mt-3">
                                        <p class="font-medium">Pour commencer :</p>
                                        <ul class="list-disc pl-5 mt-1 space-y-1">
                                            <li>Ajoutez des vêtements à votre garde-robe</li>
                                            <li>Assurez-vous d'avoir différentes catégories (haut, bas, chaussures...)</li>
                                            <li>Incluez des descriptions détaillées pour de meilleures suggestions</li>
                                        </ul>
                                    </div>
                                {% endif %}

                                {% if "reformuler" in error %}
                                    <div class="mt-3">
                                        <p class="font-medium">Conseils pour améliorer votre demande :</p>
                                        <ul class="list-disc pl-5 mt-1 space-y-1">
                                            <li>Précisez l'occasion (travail, soirée, casual...)</li>
                                            <li>Mentionnez la saison ou la météo</li>
                                            <li>Indiquez un style particulier souhaité</li>
                                            <li>Donnez des exemples de combinaisons que vous aimez</li>
                                        </ul>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if proposedOutfit is not null %}
                <hr class="my-8">
                <h2 class="text-2xl font-semibold mb-4">Vêtements proposés</h2>
                <div class="flex flex-wrap -mx-2">
                    {% for item in proposedOutfit %}
                        <div class="w-full md:w-1/2 px-2 mb-4">
                            <div class="bg-white shadow rounded-lg p-6">
                                <div class="flex justify-between items-start mb-4">
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-900">{{ item.name }}</h3>
                                        <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800 mt-1">
                                            {{ item.category }}
                                        </span>
                                    </div>
                                </div>
                                <p class="text-gray-600 text-sm">{{ item.reason }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            {% if formOutfit is not null %}
                <div class="bg-white shadow rounded-lg">
                    <div class="border-b border-gray-200 px-6 py-4">
                        <h2 class="text-2xl font-semibold">Créer l'Outfit</h2>
                    </div>
                    <div class="px-6 py-4">
                        {{ form_start(formOutfit, {
                            'method': 'POST',
                            'attr': {
                                'id': 'outfit-creation-form',
                                'class': 'space-y-4'
                            }
                        }) }}
                        <input type="hidden" name="action" value="create" />
                        
                        {{ form_row(formOutfit.name, {
                            'attr': {
                                'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'
                            }
                        }) }}
                        
                        {{ form_row(formOutfit.description, {
                            'attr': {
                                'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'
                            }
                        }) }}
                        
                        <button type="submit" class="w-full md:w-auto bg-tertiary-600 hover:bg-tertiary-700 text-white font-semibold py-2 px-4 rounded">
                            Créer l'Outfit
                        </button>
                        {{ form_end(formOutfit) }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
